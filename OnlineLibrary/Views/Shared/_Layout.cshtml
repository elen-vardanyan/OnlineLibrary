<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Bookiverse</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Content/bootstrap-5.1.3/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/jQuery.3.6.0/jquery-3.6.0.min.js" type="text/javascript"></script>
    <link href="~/Content/Styles/common.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Content/bootstrap-5.1.3/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script src="~/Content/Scripts/common.js" type="text/javascript"></script>
</head>
<body>
    <div class="ol-header">
        <div class="ol-header-logo">
            <a href="/">
                <img src="~/Content/Images/logo.png" alt="Bookiverse" />
            </a>
        </div>
        <div class="ol-header-uploadbutton">
            <a href="~/Home/UploadPage">
                <p>Upload a book <span>+</span></p>
            </a>
        </div>
    </div>
    @RenderBody()
    @RenderSection("scripts", required: false)
    <div class="ol-footer text-center pt-3">
        <p>Copyright © @DateTime.Now.Year inception, Inc. All rights reserved</p>
    </div>
</body>
</html>